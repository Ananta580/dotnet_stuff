@model A2.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Add User";
    Layout = "_Layout";
}

<div class="max-w-xl mx-auto my-6 p-4">
    <div class="">
        <a asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
    </div>
    <h2 class="text-3xl mb-6 font-semibold">Add User</h2>
    <form asp-action="AddUser" method="post" class="space-y-4">
        <div class="text-red-500" asp-validation-summary="ModelOnly"></div>

        <div class="flex w-full gap-5">
            <div class="w-full">
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="FirstName" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full">
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="LastName" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" type="email" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" type="password" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Role" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="Role" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Address" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <button type="submit" class="w-full bg-purple-800 hover:bg-purple-900 text-white font-semibold py-2 rounded-md">Add User</button>
        </div>
    </form>


</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}