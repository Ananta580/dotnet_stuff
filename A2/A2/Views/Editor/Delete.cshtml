@model Product

<h1>Delete</h1>

<h4>Product</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Model.Price
            </dd>
