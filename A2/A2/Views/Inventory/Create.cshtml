@model Product
@{
ViewData["Title"] = "Create Product";
Layout = "_Layout";
}

<div class="max-w-xl mx-auto my-6">
    <div class="mt-4">
        <a asp-action="Index" class="text-blue-600 hover:text-blue-800">Back to List</a>
    </div>
    <h2 class="text-2xl font-semibold mb-6">Create Product</h2>

    <form asp-action="Create" enctype="multipart/form-data" class="space-y-4">
        <div class="text-red-500" asp-validation-summary="ModelOnly"></div>

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ShortDescription" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ShortDescription" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="ShortDescription" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Description" rows="4" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Image" class="block text-sm font-medium text-gray-700"></label>
            <input type="file" asp-for="Image" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Image" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Price" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Price" type="number" step="0.01" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-purple-500"/>
            <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="flex gap-2">
            <input asp-for="IsFeatured" type="checkbox" />
            <label asp-for="IsFeatured" class="block text-sm font-medium text-gray-700"></label>
        </div>

        <button type="submit" class="w-full !mt-8 bg-purple-800 hover:bg-purple-900 text-white font-semibold py-2 rounded-md">Create</button>
    </form>


</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
