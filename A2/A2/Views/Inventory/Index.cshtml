@model IEnumerable<Product>
@{
    ViewData["Title"] = "Inventory";
}

<div class="max-w-6xl mx-auto my-8">
    <h1 class="text-3xl font-bold text-gray-800">Inventory</h1>
    <p class="mb-8 text-right">
        <a asp-action="Create" class="text-white bg-purple-700 hover:bg-purple-800 px-6 py-3 rounded-md shadow-md">Add Product</a>
    </p>

    <div class="overflow-x-auto shadow-lg rounded-lg">
        <table class="min-w-full bg-white rounded-lg overflow-hidden">
            <thead class="bg-gray-100 text-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">Image</th>
                    <th class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">Short Description</th>
                    <th class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">Description</th>
                    <th class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">Price</th>
                    <th class="px-6 py-3"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <img src="@item.Image" alt="@item.Name" class="w-16 h-16 object-cover rounded-md shadow-sm"/>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Name</td>
                        <td class="px-6 py-4 whitespace-wrap text-sm text-gray-500">@item.ShortDescription</td>
                        <td class="px-6 py-4 whitespace-wrap text-sm text-gray-500">@item.Description</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$@item.Price</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-purple-600 hover:text-purple-800">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
