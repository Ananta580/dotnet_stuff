@model Product
@{
ViewData["Title"] = "Delete Product";
Layout = "_Layout";
}

<div class="max-w-xl mx-auto my-6">
    <div class="mt-4">
        <a asp-action="Index" class="text-blue-600 hover:text-blue-800">Back to List</a>
    </div>

    <h2 class="text-2xl font-semibold mb-6">Delete Product</h2>
    <h4 class="text-lg font-semibold text-gray-600 mb-4">Are you sure you want to delete this product?</h4>

    <div class="mb-4">
        <h4 class="text-lg font-semibold">@Model.Name</h4>
        <dl class="grid grid-cols-2 gap-4">
            <dt class="font-medium">Price:</dt>
            <dd class="text-gray-700">@Model.Price</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md">
            Delete
        </button>
    </form>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
