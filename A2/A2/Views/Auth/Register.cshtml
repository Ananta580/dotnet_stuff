@model A2.Models.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="max-w-xl mx-auto my-6">
    <h2 class="text-2xl font-semibold mb-6">Register</h2>

    <form asp-action="Register" method="post" class="space-y-4">
        <div class="flex w-full gap-5">
            <div class="w-full">
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="FirstName" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full">
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="LastName" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div class="flex gap-5">
            <div class="w-full">
                <label asp-for="Role" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="Role" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full">
                <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Address" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
                <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500" type="password"/>
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full !mt-8 bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 rounded-md">Register</button>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}