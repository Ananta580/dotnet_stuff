@model A2.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="max-w-xl mx-auto my-6">

    <h2 class="text-2xl font-semibold mb-6">Login</h2>
    <form asp-action="Login" method="post" class="space-y-4">
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" type="password" class="mt-1 block w-full border p-2 border-gray-300 outline-none rounded-md shadow-sm focus:ring focus:ring-blue-500"/>
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full !mt-8 bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 rounded-md">Login</button>
    </form>
    

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}