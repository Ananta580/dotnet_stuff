@model Product

<div class="max-w-5xl mx-auto p-6 bg-white rounded-lg">
    <div class="md:flex md:space-x-8">

        <div class="md:w-1/2 flex justify-center">
            <img src="~/@Model.Image" alt="@Model.Name" class="w-full h-full object-cover rounded-lg shadow-lg" />
        </div>

        <div class="md:w-1/2 mt-6 md:mt-0">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">@Model.Name</h1>

            <p class="text-xl text-purple-800 font-semibold mb-4">$@Model.Price</p>

            <p class="text-gray-600 mb-4">@Model.ShortDescription</p>

            <div class="flex items-center mb-4">
                <span class="text-gray-700 font-medium">Featured:</span>
                <span class="ml-2">@(Model.IsFeatured ? "Yes" : "No")</span>
            </div>

            <button class="bg-purple-900 hover:bg-purple-950 text-white font-semibold py-3 px-6 rounded-full mt-4">
                Add to Cart
            </button>
        </div>
    </div>

    <!-- Full Description Section -->
    <div class="border-t mt-8 pt-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Product Description</h2>
        <p class="text-gray-700">@Model.Description</p>
    </div>
</div>
