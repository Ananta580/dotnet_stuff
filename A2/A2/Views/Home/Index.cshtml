@{
ViewData["Title"] = "Home Page";
}
@model ICollection<Product>

<div class="text-center my-16 bg-gradient-to-tr from-black via-purple-950 to-black text-white py-10 rounded-lg shadow-lg">
    <h1 class="text-5xl font-extrabold mb-4">Welcome to Shoppers</h1>
    <p class="text-lg mb-6 max-w-2xl mx-auto">
        Discover a variety of high-quality products at unbeatable prices. Shop now and find the best deals tailored for you!
    </p>
    <a href="/Products" class="px-6 py-3 bg-white text-purple-900 font-semibold rounded-full hover:bg-gray-100 transition">
        Shop Now
    </a>
</div>

<div class="container mx-auto my-16">
    <h2 class="text-3xl font-semibold mb-8 text-gray-800">Featured Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var product in Model)
        {
            <div class="border border-gray-100 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                <img src="@product.Image" alt="Product 1" class="w-full h-48 object-cover rounded-lg mb-4">
                <h3 class="text-2xl font-semibold mb-2">@product.Name</h3>
                <p class="text-gray-600 mb-4">@product.ShortDescription</p>
                <div class="flex justify-between items-center">
                    <span class="text-purple-900 font-bold text-lg">$@product.Price</span>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="px-4 py-2 bg-purple-900 text-white rounded-full hover:bg-purple-950 transition">Watch Detail</a>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mx-auto my-16">
    <h2 class="text-3xl font-semibold mb-4 text-gray-800">More Products</h2>
    <p class="text-gray-600 mb-6">
        Sign in to explore our full range of products.
    </p>
    <a href="/Auth/Login" class="text-purple-900 hover:underline font-semibold">Login Here</a>
</div>

<div class="container mx-auto my-16">
    <h2 class="text-3xl font-semibold mb-6 text-gray-800">About Us</h2>
    <p class="text-gray-700 leading-relaxed">
        Welcome to our store! We bring you the finest selection of products from top brands. Our commitment to quality and customer satisfaction is unmatched. Whether you're looking for the latest trends or classic essentials, we have something for everyone. Enjoy seamless shopping and exceptional service at Shoppers.
    </p>
</div>
