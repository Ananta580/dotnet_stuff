@model A1_2.Models.Resource

@{
ViewData["Title"] = "Resource Details";
}

<h1 class="my-3">Resource Details</h1>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Type)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Unit)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Unit)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsAvailable)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.IsAvailable)</dd>
