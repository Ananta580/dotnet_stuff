@model IEnumerable<A1_2.Models.Resource>

@{
ViewData["Title"] = "Resources";
}

<h1 class="my-3">Resources</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="bg-black text-white">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Type)</th>
        <th>@Html.DisplayNameFor(model => model.Unit)</th>
        <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Type)</td>
        <td>@Html.DisplayFor(modelItem => item.Unit)</td>
        <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
        <td>
            <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a class="text-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
        </td>
    </tr>
    }
    </tbody>
</table>
