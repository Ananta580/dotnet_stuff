@{
    ViewData["Title"] = "Services";
}

<div class="container">
    <h1 class="display-4 text-center mt-5">@ViewData["Title"]</h1>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.shinetechsoftware.com/wp-content/uploads/2024/05/mobile-app-development-methodologies.jpg" class="card-img-top" alt="Service 1">
                <div class="card-body">
                    <h5 class="card-title">Web Development</h5>
                    <p class="card-text"> Creating captivating websites that resonate with your brand identity and drive engagement. </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://img.freepik.com/free-vector/website-development-banner_33099-1687.jpg?size=626&ext=jpg&ga=GA1.1.1819120589.1727740800&semt=ais_hybrid" class="card-img-top" alt="Service 2">
                <div class="card-body">
                    <h5 class="card-title">Mobile App Development</h5>
                    <p class="card-text"> Crafting innovative and user-friendly mobile applications tailored to meet your business objectives. </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://media.istockphoto.com/id/1415537875/photo/asian-graphic-designer-working-in-office-artist-creative-designer-illustrator-graphic-skill.jpg?s=612x612&w=0&k=20&c=9ufB0QZ-LPcz14zLh909QEEbmDmcfIYzhBsST3hXbMs=" class="card-img-top" alt="Service 3">
                <div class="card-body">
                    <h5 class="card-title">Graphics Designing</h5>
                    <p class="card-text"> Delivering visually stunning graphics and designs that leave a lasting impression on your audience. </p>
                </div>
            </div>
        </div>
    </div>
</div>