<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A3 Assignment</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800 h-screen flex flex-col justify-between">

<div>
    

    <!-- Navigation Bar -->
    <nav class="bg-gradient-to-r from-indigo-900 to-black text-white p-4">
        <div class="container mx-auto flex justify-between">
            <a href="/" class="text-lg font-bold">A3 Assignment</a>
            <div>
                <a asp-controller="Home" asp-action="Index" class="mr-4 hover:text-gray-300">Home</a>
                <a asp-controller="Home" asp-action="FileResultDemo" class="mr-4 hover:text-gray-300">1a. FileResult Demo</a>
                <a asp-controller="Home" asp-action="JsonResultDemo" class="mr-4 hover:text-gray-300">1b. JsonResult Demo</a>
                <a asp-controller="Home" asp-action="QueryDemo" asp-route-message="This data is coming from Query string" class="mr-4 hover:text-gray-300">5a. Query String Demo</a>
                <a asp-controller="Home" asp-action="SetSession" class="hover:text-gray-300">5b. Session Demo</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-6">
        @RenderBody()
    </div>
</div>

<!-- Footer -->
<footer class="bg-gray-200 mt-6">
    <div class="container mx-auto p-4 flex justify-between">
        &copy; 2024 Ananta Poudel. All rights reserved.
    </div>
</footer>
</body>
</html>
